######################################################################
# Informational helpers.                                             #
######################################################################

fatal() {
  echo >&2 "@ARGV0@: $1"
  exit 1
}

######################################################################
# Findredundantdeps.                                                 #
######################################################################

findredundantdeps() {
  _DEPS=$(pkgman dep --all "$1") || exit 3

  # Intentional.
  # shellcheck disable=2086
  pkgman dep --all --recursive --full "$1" |
    grep -E "($(echo $_DEPS | tr ' ' '|'))$"
}

show_uniq() {
  tr ' ' '\n' | sort | uniq -u
}

######################################################################
# Command-line helpers.                                              #
######################################################################

print_help() {
  cat <<EOF
Usage: @ARGV0@ [OPTION] PKGNAME
Find (un)necessary dependencies of the package.

  -u, --unique    print only unique (required) dependencies
  -v, --version   print version and exit
  -h, --help      print help and exit
EOF
}

print_version() {
  echo "@ARGV0@ (pkgmaint) @VERSION@"
}

parse_options() {
  eval set -- "$(
    getopt -n "@ARGV0@" -a -l "unique,version,help" -o ":uvh" -- "$@"
  )"
  while true; do
    case $1 in
    -u| --unique) SHOW_UNIQ_CMD=show_uniq     ;;
    -v|--version) print_version      ; exit 0 ;;
    -h|   --help) print_help         ; exit 0 ;;
              --) shift              ; break  ;;
               *) fatal "unknown option: $1"  ;;
    esac
    shift
  done

  SHOW_UNIQ_CMD=${SHOW_UNIQ_CMD:-cat}
  PKGNAME=$*

  set -- $PKGNAME
  case $# in
  0) fatal "missing argument"   ;;
  1)                            ;;
  *) fatal "too many arguments" ;;
  esac
}

main() {
  parse_options "$@"
  findredundantdeps "$PKGNAME" | $SHOW_UNIQ_CMD
}

######################################################################

export LC_ALL=POSIX
main "$@"

